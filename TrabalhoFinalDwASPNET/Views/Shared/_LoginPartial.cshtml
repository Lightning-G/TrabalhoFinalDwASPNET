@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-danger mt-2">Terminar Sessão</button>
            </form>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Gerenciar">
                <img style="width: 45px" src="https://cdn-icons-png.flaticon.com/512/149/149995.png" alt="Perfil" />
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Register">Registro</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary mx-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

    }
</ul>
