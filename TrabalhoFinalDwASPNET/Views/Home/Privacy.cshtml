@{
    ViewData["Title"] = "Contacto";
}
<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
    }

    .base {
        margin-left: 23%;
        display: inline-block;
        text-align: center;
        width: 50%;
    }
</style>
<div>
    <div class="base">
        <h1>Suporte</h1>
        <p>
            Bem-vindo à nossa página de suporte. Se precisar de qualquer assistência, por favor não hesite em contactar-nos.
        </p>
        <div>
            <h2>Informações de Contacto</h2>
            <p>
                Email: <a href="mailto:support@example.com">support@email.com</a>
            </p>
            <p>Telefone: +351 969396939</p>
