@model List<Events>

<h2>My Events</h2>

@if (Model.Count == 0)
{
    <p>No events created yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Date</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ev in Model)
            {
                <tr>
                    <td>@ev.title</td>
                    <td>@ev.start_time</td>
                    <td>@ev.location</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@ev.Id">Details</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

